{
  "name": "No Merge Today",
  "description": "Block Github merge button on specific days",
  "version": "0.1",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "storage",
    "webNavigation"
  ],
  "action": {
    "default_popup": "src/popup.html"
  },
  "background": {
    "service_worker": "src/service-worker.js"
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "src/content-script.js"
      ]
    }
  ]
}
